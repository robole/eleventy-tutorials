<p>My incredible posts grouped by year.</p>

<section class="blog">

  {% for year, posts in collections.postsByYearDesc  %}
    <h2>{{ year }}</h2>

		{% for post in posts %}
			<div class="post">
				<h3><a href="{{ post.url }}"">{{ post.data.title }}</a></h3>
				<span>|</span>
				<time>{{ post.date | simpleDate }}</time>
			</div>
		{% endfor %}
		

  {% endfor %}

</section>
