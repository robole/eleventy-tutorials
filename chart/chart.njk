---
layout: layouts/base.njk
title: Chart
permalink: /chart/
stylesheet: "https://cdn.jsdelivr.net/npm/charts.css@1.1.0/dist/charts.min.css"
description: "This is a chart of the posts written by year."
---

{% set stats = collections.posts | byYear %}
{% set numOfPosts = collections.posts.length %}

<div id="post-count">
	<table class="charts-css bar show-heading show-labels show-primary-axis data-spacing-4 data-center">
		<caption>Post Count</span></caption> 
		<thead>
			<tr>
				<th scope="col"> Year </th> 
				<th scope="col"> Value </th>
			</tr>
		</thead> 
		<tbody>
			{% for year, value in stats %}
				<tr>
					<th scope="row"> {{ year }}</th> 
					<td style="--size: calc( {{ value }} / {{ numOfPosts }});"> <span class="data"> {{ value }} </span> </td>
				</tr> 
			{% endfor %}
		</tbody>
	</table>
</div>
